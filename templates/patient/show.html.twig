{% block title %}Patient{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ patient.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ patient.prenom }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ patient.addresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ patient.Telephone }}</td>
            </tr>
            <tr>
                <th>Age</th>
